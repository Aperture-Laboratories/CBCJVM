	public class RightButtonPressed extends Event {}
	
	private AButton aButton = new AButton();
	private BButton aButton = new BButton();
	private BlackButton aButton = new BlackButton();
	private DownButton aButton = new DownButton();
	private UpButton aButton = new UpButton();
	private LeftButton aButton = new LeftButton();
	private RightButton aButton = new RightButton();
	
	@Override
	public void run() {
		if()
	}
}
