<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin
   id="CBCJava"
>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="CBC ActionSet"
            visible="true"
            id="CBC.actionSet">
         <menu
               label="CBC&amp;Java"
               id="cbcMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               class="cbc.actions.CBCUPAction"
               icon="icons/arrow.png"
               id="cbc.actions.CBCUPAction"
               label="&amp;Recover"
               menubarPath="cbcMenu/cbcGroup"
               toolbarPath="cbcGroup"
               tooltip="Recovers a project from a CBC">
         </action>
         <action
               class="cbc.actions.CBCFDAction"
               icon="icons/fd16.png"
               id="cbc.actions.CBCFDAction"
               label="&amp;Save"
               menubarPath="cbcMenu/cbcGroup"
               toolbarPath="cbcGroup"
               tooltip="Saves current project to filesystem">
         </action>
         <action
               class="cbc.actions.CBCUSBAction"
               icon="icons/usb16.png"
               id="cbc.actions.CBCUSBAction"
               label="Download via &amp;USB"
               menubarPath="cbcMenu/cbcGroup"
               toolbarPath="cbcGroup"
               tooltip="Downloads current project to the CBC via USB">
         </action>
         <action
               label="&amp;Download via LAN"
               icon="icons/16.png"
               class="cbc.actions.CBCAction"
               tooltip="Downloads current project to the CBC via Network"
               menubarPath="cbcMenu/cbcGroup"
               toolbarPath="cbcGroup"
               id="cbc.actions.CBCAction">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="CBC"
            name="CBCJava">
      </category>
      <view
            category="CBC"
            class="cbc.views.CBCView"
            icon="icons/sample.gif"
            id="cbc.views.CBCView"
            name="CBC View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="cbc.views.CBCView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
